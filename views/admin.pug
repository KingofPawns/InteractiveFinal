extends layout.pug

block content
    div(class="jumbotron")
        h2(class="display")="User Management"
        hr(class="my-4")
        ul(class="list-group")
        each user in users
            li(class="list-group-item d-flex justify-content-between align-items-center")
                span=user.Username
                if user.IsActive
                    a(class="badge btn btn-danger", href="/suspend/"+user.Username)="Suspend"
                else
                    a(class="badge btn btn-success", href="/activate/"+user.Username)="Reactivate"