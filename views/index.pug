        div(class="card-body")
            p(class="card-text")="Rogue"
            div(class="progress")
                div(class="progress-bar bg-warning" role="progressbar" style="width:31%" aria-valuenow="31" aria-valuemin="0" aria-valuemax="100")
            p(class="card-text")="Wizard"
            div(class="progress")
                div(class="progress-bar bg-info" role="progressbar" style="width:35%" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100")
            p(class="card-text")="Fighter"
            div(class="progress")
                div(class="progress-bar bg-danger" role="progressbar" style="width:34%" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100")

    div(class="card text-white bg-primary mb-3")
        div(class="card-header")="What is your favorite color?"
        div(class="card-body")
            p(class="card-text")="Green"
            div(class="progress")
                div(class="progress-bar bg-success" role="progressbar" style="width:45%" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100")
            p(class="card-text")="Yellow"
            p(class="card-text")="Blue"
            div(class="progress")
                div(class="progress-bar bg-info" role="progressbar" style="width:30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100")
            p(class="card-text")="Red"
            div(class="progress")
